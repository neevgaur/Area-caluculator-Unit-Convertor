<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gaurneev.areaunitconverter">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AreaUnitConverter"
        tools:targetApi="31">
        <activity
            android:name=".SpinnerMenu"
            android:exported="false" />
        <activity
            android:name=".pentagon"
            android:exported="false" />
        <activity
            android:name=".square"
            android:exported="false" />
        <activity
            android:name=".rectangle"
            android:exported="false" />
        <activity
            android:name=".triangle"
            android:exported="false" />
        <activity
            android:name=".areaActivity"
            android:exported="false" />
        <activity
            android:name=".converterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>